  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    // "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    "src/index.ts"
  ],
}